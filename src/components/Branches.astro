---
import { Icon } from "astro-icon/components";

const branches = [
  {
    id: "central",
    title: "شعبه مرکزی",
    address: "تهران، خیابان قائم مقام فراهانی، پلاک 158، مرکز تعمیرات اپل",
  },
  {
    id: "west",
    title: "شعبه غرب",
    address: "تهران، سعادت آباد، میدان کاج، کوچه دوازدهم علی اکبر، پلاک 30، مجتمع اداری کسری، طبقه اول واحد 5",
  },
];
---

<section aria-labelledby="branches-heading" class="py-20">
  <div class="max-w-7xl mx-auto px-4">

    <!-- Title -->
    <h2
      id="branches-heading"
      class="text-center text-white text-2xl md:text-3xl font-bold mb-10"
    >
      شعب نمایندگی تعمیرات اپل در تهران
    </h2>

    <!-- Cards -->
    <div class="flex flex-col items-center gap-6">
      {branches.map((branch) => (
        <article
          class="w-full max-w-3xl rounded-2xl p-6 md:p-8
                 border border-gray-800/60
                 bg-gradient-to-b from-black/60 to-black/40
                 backdrop-blur-xl
                 shadow-[0_20px_40px_rgba(0,0,0,0.6)]
                 transition-transform duration-300 hover:-translate-y-1"
          role="article"
          aria-labelledby={`branch-${branch.id}`}
        >
          <div class="flex items-start gap-4">
            <!-- Icon -->
            <div
              class="flex items-center justify-center
                     w-14 h-14 rounded-full
                     bg-gray-900/80
                     ring-1 ring-gray-700/60
                     text-white"
            >
              <Icon name="lucide:map-pin" class="w-7 h-7" aria-hidden="true" />
            </div>

            <!-- Content -->
            <div>
              <h3
                id={`branch-${branch.id}`}
                class="text-white text-lg md:text-xl font-semibold"
              >
                {branch.title}
              </h3>

              <address class="not-italic mt-2 text-gray-300 text-sm md:text-base leading-relaxed">
                {branch.address}
              </address>
            </div>
          </div>
        </article>
      ))}
    </div>

  </div>
</section>
