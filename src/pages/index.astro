---
import BaseLayout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';
import Branches from '../components/Branches.astro';
import Services from '../components/Services.astro';
import ServicesSlider from '../components/ServicesSlider.astro';
import CTASection from '../components/CTASection.astro';
import IphoneHeader from '../components/iphoneheader.astro';
import VideoHero from '../components/VideoHero.astro';
import AfterSalesAppleSection from '../components/AfterSalesAppleSection.astro';
import MacbookRepairSection from '../components/MacbookRepairSection.astro';
import AppleWatchSupportSection from '../components/AppleWatchSupportSection.astro';
import IpadRepairSection from '../components/IpadRepairSection.astro';
import AirpodsStickyHero from '../components/AirpodsStickyHero.astro';
import CallToActionPro from '../components/CallToActionPro.astro';
import FaqSection from '../components/FaqSection.astro';
import SeoSchema from "../components/SeoSchema.astro";
---

<BaseLayout>
	<Hero />
	<Features />
  <Branches />
   <Services />
  <ServicesSlider />
  <CTASection />
  <IphoneHeader />
  <VideoHero />
  <AfterSalesAppleSection />
  <MacbookRepairSection />
  <AppleWatchSupportSection />
  <IpadRepairSection />
  <AirpodsStickyHero />
  <CallToActionPro />
  <FaqSection />

   <main class="max-w-7xl mx-auto px-4">
    <!-- ادامهٔ صفحه: سشن‌های بعدی -->
  </main>
</BaseLayout>

<!-- Head slot -->
<Fragment slot="head">
  <title>نمایندگی تعمیرات اپل — Apple Repairer</title>
  <meta name="description" content="تعمیرات تخصصی محصولات اپل در تهران نمایندگی مرکزی اپل با گارانتی رسمی apple و پیک رایگان" />
  <SeoSchema />
</Fragment>
